{
  "name": "@codebalancers/mock-server",
  "version": "1.0.15",
  "description": "Mock server written in Typescript",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/codebalancers/cb-mock-server.git"
  },
  "keywords": [],
  "author": "codebalancers",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/codebalancers/cb-mock-server/issues"
  },
  "homepage": "https://github.com/codebalancers/cb-mock-server",
  "scripts": {
    "clean": "rm -rf lib/",
    "compile": "tsc",
    "lint": "tslint --project tslint.json src/**/*.ts",
    "test": "jest",
    "build": "npm run clean && npm run lint &&  npm run compile",
    "serve": "ts-node src/main.ts --static=test/static --dynamic=test/dynamic"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__test__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "files": [
    "bin",
    "lib"
  ],
  "main": "lib/main.js",
  "bin": "./bin/index.js",
  "typings": "lib/index.ts",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "body-parser": "^1.18.2",
    "cookie-parser": "^1.4.3",
    "express": "^4.16.3",
    "lodash": "^4.17.11",
    "yargs": "^11.0.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/cookie-parser": "^1.4.1",
    "@types/express": "^4.11.1",
    "@types/jest": "^22.2.3",
    "@types/lodash": "^4.14.119",
    "@types/node": "^8.10.11",
    "jest": "^22.4.3",
    "ts-jest": "^22.4.4",
    "ts-node": "^6.0.2",
    "tslint": "^5.9.1",
    "tslint-eslint-rules": "^5.1.0",
    "typescript": "2.6.2"
  }
}
